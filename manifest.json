{
  "name": "ASN Plus",
  "description": "Aviation Safety Network Plus - Additional Features and Display Options.",
  "homepage_url": "https://github.com/cssnr/asn-plus",
  "author": "Shane",
  "version": "0.0.1",
  "manifest_version": 3,
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "Show Main Popup Action"
    },
    "openHome": {
      "suggested_key": {
        "default": "Alt+Shift+X"
      },
      "description": "Open Home Page"
    },
    "showPage": {
      "suggested_key": {
        "default": "Alt+Shift+W"
      },
      "description": "Show Extension Page"
    }
  },
  "permissions": ["contextMenus", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": [
        "http://aviation-safety.net/*",
        "https://aviation-safety.net/*"
      ],
      "run_at": "document_start",
      "js": ["dist/jquery/jquery.min.js", "js/asn.js", "js/content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["css/dark.css"],
      "matches": [
        "http://aviation-safety.net/*",
        "https://aviation-safety.net/*"
      ]
    }
  ],
  "background": {},
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_title": "ASN Plus",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "96": "images/logo96.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "96": "images/logo96.png",
    "128": "images/logo128.png"
  }
}
